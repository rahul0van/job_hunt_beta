# Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=django-insecure-change-this-in-production-!!!!
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Google Sheets Configuration (Optional)
# Path to your Google service account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS_FILE=/path/to/your/credentials.json

# Your Google Sheets document ID
# Example: If your URL is https://docs.google.com/spreadsheets/d/1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms/edit
# Then your ID is: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms
GOOGLE_SHEETS_ID=your-google-sheets-id-here
